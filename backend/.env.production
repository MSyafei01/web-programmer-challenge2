    NODE_ENV=production
    PORT=5000
    HOST=0.0.0.0

    # Database - akan di-set otomatis oleh Railway
    DB_HOST=${RAILWAY_MYSQLHOST}
    DB_USER=${RAILWAY_MYSQLUSER}
    DB_PASSWORD=${RAILWAY_MYSQLPASSWORD}
    DB_NAME=${RAILWAY_MYSQLDATABASE}
